// sum of natural numbers
public class sumnatural {
    public static int natural(int n)
    {
        if(n==1)
        {
            return 1;
        }
        int sum_1=natural(n-1);
        int sumN=n+sum_1;
        return sumN;
    }
    public static void main(String[] args) {
        int n=3;
        System.out.println(natural(n));
    }
    
}
